# Use the same Node.js version
FROM node:20-alpine

WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm install

# Copy all your code
COPY . .

# Expose the Vite dev port
EXPOSE 5173

# Run the dev server and make it accessible outside the container
# The "-- --host" part is CRITICAL for Docker
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]